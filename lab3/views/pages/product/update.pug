extends ../../layout

block content
  div(class='col-md-6')
    form(id='product-update-form' name='product-update-form' class='form-horizontal' method="POST" action='')
      input(id='id' name='id' type='hidden' value=product.id)
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Code
        div(class='col-md-9')
          input(id='code' name='code' value=$fn.getPropOrDefault(newProduct, 'code', product.code) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='name') Name
        div(class='col-md-9')
          input(id='name' name='name' value=$fn.getPropOrDefault(newProduct, 'name', product.name) class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='country') Country
        div(class='col-md-9')
          input(id='country' name='country' value=$fn.getPropOrDefault(newProduct, 'country', product.country) class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Update